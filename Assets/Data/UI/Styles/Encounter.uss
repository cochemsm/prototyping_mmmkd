    background-color: rgb(0, 255, 147);
    height: 350px;
}

.cardHover:hover .card {
}

.cardhandCenter {
    height: 100%;
    width: 0;
    background-color: rgb(0, 255, 15);
}

.inactiveCard {
    background-color: rgba(0, 0, 0, 0.78);
}
