.fillScreen {
    width: 100%;
    height: 100%;
    position: absolute;
}

.patientMeter {
    position: absolute;
    width: 500px;
    top: 100px;
    left: 200px;
}

.meterComponent {
    width: 100%;
    height: 200px;
    flex-direction: row;
    background-image: url('project://database/Assets/Art/2D%20Art/HUD/Patience%20Meter/PatiencepowerLines5.png?fileID=2800000&guid=9791195ca071c9a41810d22f8db0e845&type=3#PatiencepowerLines5');
}

.meterField {
    flex-basis: 100%;
}

.activeMeterField {
    background-image: url('project://database/Assets/Art/2D%20Art/Cards/Epic/CardBatterieEnergy5.png?fileID=2800000&guid=639fd4a5caf036f439568acbdc950c2c&type=3#CardBatterieEnergy5');
}

#Patience .activeMeterField {
    background-image: url('project://database/Assets/Art/2D%20Art/HUD/Patience%20Meter/Patiencepower5.png?fileID=2800000&guid=efaaaf2d2abaf1345a1b7c7cedbc39c4&type=3#Patiencepower5');
